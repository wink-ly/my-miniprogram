/*正文*/
.chapter_sv {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #fff5e0;
  z-index: 10;
}

.btn_sv {
  background-color: #f2e9d5;
  border-radius: 20px;
  margin: 10px;
}

.btn_next {
  height: 5vh;
  width: 80%;
  text-align: center;
  border-radius: 20px;
  background-color: #f2e9d5;
  margin: 10px;
  margin-left: 10%;
}

.chapter_view {
  display: flex;
  flex-direction: column;
}

.text_chapter {
  display: block;
  color: black;
  font-size: 34rpx;
  padding: 10px;
  letter-spacing: 1rpx;
}

/* 章节按钮弹框 */
.btn_view {
  background-color: #fff;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 10%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 8;
  transform: translate(0, 100%);
  transition: all 0.2s linear;
}

.btn_view.show {
  transform: translate(0, 0);
}

.btn_chapter {
  font-size: 32rpx;
}

/*目录弹框*/
.chapters_view {
  position: fixed;
  top: 30%;
  bottom: 0;
  background-color: #fff;
  transform: translate(0, 100%);
  transition: all 0.2s linear;
  z-index: 9;
  flex-direction: column;
}

.chapters_view.show {
  transform: translate(0, 0);
}

.chapters_mask {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .5);
  z-index: 8;
  display: none;
}

.chapters_mask.show {
  display: block;
}

.chapters_text {
  margin: 16px;
  font-size: 30rpx;
}

.chapter_text_view {
  display: flex;
  height: 35px;
  padding: 20rpx;
  align-items: center;
  border-top: 1px solid #cfcfcf;
}

.more {
  height: 20%;
}

.ic_chapter {
  margin-left: 10rpx;
  margin-right: 10rpx;
  width: 40rpx;
  height: 40rpx;
}

.chapter_text {
  /* display: block; */
  font-size: 30rpx;
  color: black;
  height: 30rpx;
  line-height: 30rpx;
}