/* pages/booklist/booklist.wxss */
.main {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #f0f0f0;
}

.list1 {
  box-sizing: border-box;
  background-color: #fff;
  width: 95%;
  height: 28%;
  margin-left: 2.5%;
  margin-top: 4%;
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.up {
  height: 100%;
}

.title {
  display: flex;
  justify-content: space-between;
}

.more{
  font-size: 26rpx;
  font-weight: lighter;
  display: flex;
  align-items: center;
}

.img {
  width: 26rpx;
  height: 26rpx;
}

.down {
  display: flex;
  justify-content: space-around;
}

.book {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.img_book {
  width: 23vw;
  height: 17vh;
  border-radius: 15rpx;
}

.name_book {
  width: 180rpx;
  margin-top: 8rpx;
  font-weight: lighter;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}