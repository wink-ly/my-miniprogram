.main{
  height: 100vh;
  width: 100vw;
}

.list{
  width: 100%;
}

.title{
  height: 40rpx;
  color: #101f30;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-top: 1rpx solid #cfcfcf;
}

.answer{
  font-size: 34rpx;
  display: flex;
  align-items: center;
  padding: 20rpx;
  transition: opacity .5s;
}

.answer text{
  color: #808080;
}